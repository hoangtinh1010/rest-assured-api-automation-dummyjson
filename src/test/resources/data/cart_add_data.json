[
  {
    "userId": 1,
    "products": [
      { "id": 1, "quantity": 2 },
      { "id": 2, "quantity": 1 }
    ],
    "expectedStatusCode": 201,
    "note": "Valid - Add multiple products"
  },
  {
    "userId": 2,
    "products": [
      { "id": 3, "quantity": 1 }
    ],
    "expectedStatusCode": 201,
    "note": "Valid - Add single product"
  },
  {
    "userId": 3,
    "products": [],
    "expectedStatusCode": 400,
    "note": "Invalid - Empty products array"
  },
  {
    "userId": 4,
    "products": null,
    "expectedStatusCode": 400,
    "note": "Invalid - Null products array"
  },
  {
    "userId": null,
    "products": [
      { "id": 1, "quantity": 1 }
    ],
    "expectedStatusCode": 400,
    "note": "Invalid - Null userId"
  },
  {
    "userId": 999,
    "products": [
      { "id": 1, "quantity": 1 }
    ],
    "expectedStatusCode": 404,
    "note": "Invalid - Non-existent userId"
  },
  {
    "userId": 5,
    "products": [
      { "id": 999, "quantity": 1 }
    ],
    "expectedStatusCode": 404,
    "note": "Invalid - Non-existent product ID"
  },
  {
    "userId": 6,
    "products": [
      { "id": 1, "quantity": -1 }
    ],
    "expectedStatusCode": 400,
    "note": "Invalid - Negative quantity: quantity < 0"
  },
  {
    "userId": 7,
    "products": [
      { "id": 2, "quantity": 0 }
    ],
    "expectedStatusCode": 400,
    "note": "Invalid: quantity = 0"
  },
  {
    "userId": 8,
    "products": [
      { "id": -1, "quantity": 1 }
    ],
    "expectedStatusCode": 400,
    "note": "Invalid - Negative product ID: product ID < 0"
  }
]
