[
  {
    "cartId": 1,
    "merge": true,
    "products": [
      {
        "id": 1,
        "quantity": 2
      },
      {
        "id": 2,
        "quantity": 1
      }
    ],
    "expectedStatusCode": 200,
    "note": "Valid: Update with merge true"
  },
  {
    "cartId": 2,
    "merge": false,
    "products": [
      {
        "id": 3,
        "quantity": 5
      }
    ],
    "expectedStatusCode": 200,
    "note": "Valid: Update with merge false"
  },
  {
    "cartId": 3,
    "merge": false,
    "products": [],
    "expectedStatusCode": 400,
    "note": "Invalid: Empty products array"
  },
  {
    "cartId": 99,
    "merge": false,
    "products": [
      {
        "id": 1,
        "quantity": 1
      }
    ],
    "expectedStatusCode": 404,
    "note": "Invalid: Non-existent cartId"
  },
  {
    "cartId": 4,
    "merge": false,
    "products": null,
    "expectedStatusCode": 400,
    "note": "Invalid: Null products array"
  }
